// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ClipboardContent {
  title     String
  content   String
  id        Int      @id @default(autoincrement())
  User      User     @relation(fields: [userEmail], references: [email])
  userEmail String
  private   Boolean  @default(false)
  createdAt DateTime @default(now())
}

model User {
  email             String             @unique
  id                String             @unique @default(uuid())
  name              String?
  profileUrl        String?
  clipboardContents ClipboardContent[]
  notes             Note[]
  tickLists         TickList[]
  voties            Voti[]
  birthdays         Birthday[]
  labels            Label[]
  quickContent      String?
  quickRedirect     String?
}

model Note {
  note      String
  title     String
  id        Int      @id @default(autoincrement())
  User      User     @relation(fields: [userEmail], references: [email])
  userEmail String
  createdAt DateTime @default(now())
}

model TickList {
  title       String
  id          String   @unique @default(uuid())
  description String?
  completed   Boolean  @default(false)
  dueDate     String
  User        User     @relation(fields: [userEmail], references: [email])
  userEmail   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  priority    Priority @default(NORMAL)
  labels      Label[]
}

model Voti {
  title     String
  id        Int       @id @default(autoincrement())
  votes     Int       @default(0)
  User      User?     @relation(fields: [userEmail], references: [email])
  userEmail String?
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  label     String?
}

model Birthday {
  id        Int     @id @default(autoincrement())
  name      String
  date      String
  User      User?   @relation(fields: [userEmail], references: [email])
  userEmail String?
}

model Label {
  id         Int       @id @default(autoincrement())
  label      String
  User       User?     @relation(fields: [userEmail], references: [email])
  userEmail  String?
  tickListId String?
  TickList   TickList? @relation(fields: [tickListId], references: [id])
}

enum Priority {
  HIGH
  LOW
  MEDIUM
  NORMAL
}

enum Color {
  ED0000
  F4A522
  F81CE5
}
