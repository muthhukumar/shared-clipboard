{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "dev": "pm2-dev ./pm2.config.js",
    "watch:css": "postcss styles --base styles --dir app/styles -w",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build:css:prod": "npm run build:css -- --env production",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|gql|graphql|mdx|vue)\"",
    "setup": "npm install && npm run build && npm run validate",
    "prepare": "husky install",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "validate": "npm run lint",
    "build": "npm run build:css:prod && npm run build:remix",
    "prebuild": "npm run clean && echo All clean",
    "clean": "npx rimraf public/build ./node_modules/.cache ./app/styles/**.css ./api/build* .cache",
    "postinstall": "remix setup node && npx prisma generate",
    "migrate:deploy": "npx prisma migrate deploy",
    "start": "cross-env NODE_ENV=production node ./build/index.js",
    "dev:node": "cross-env NODE_ENV=development nodemon ./build/index.js --watch ./build/index.js",
    "dev:remix": "cross-env NODE_ENV=development remix watch"
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.1.7",
    "@chakra-ui/react": "^1.8.6",
    "@emotion/react": "^11.8.1",
    "@emotion/styled": "^11.8.1",
    "@prisma/client": "^3.10.0",
    "@reach/dialog": "^0.16.2",
    "@remix-run/react": "^1.2.3",
    "@remix-run/serve": "^1.2.3",
    "@remix-run/vercel": "^1.2.3",
    "change-case": "^4.1.2",
    "clsx": "^1.1.1",
    "framer-motion": "^6.2.8",
    "html-to-image": "^1.9.0",
    "moment": "^2.29.1",
    "postcss-import": "^14.0.2",
    "qrcode.react": "^2.0.0",
    "react": "^17.0.2",
    "react-calendar": "^3.7.0",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-select": "^5.2.2",
    "remix": "^1.2.3",
    "remix-auth": "^3.2.1",
    "remix-auth-github": "^1.0.0",
    "remix-auth-google": "^1.1.0",
    "validator": "^13.7.0",
    "zod": "^3.13.4",
    "@remix-run/express": "^1.2.3",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.3",
    "@tailwindcss/forms": "^0.5.0",
    "@types/qrcode.react": "^1.0.2",
    "@types/react": "^17.0.39",
    "@types/react-calendar": "^3.5.0",
    "@types/react-dom": "^17.0.13",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "autoprefixer": "^10.4.2",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.29.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "postcss": "^8.4.8",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "prisma": "^3.10.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.2",
    "@remix-run/eslint-config": "^1.2.3",
    "nodemon": "^2.0.15"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|gql|graphql|mdx|vue)": [
      "prettier --write"
    ]
  },
  "sideEffects": false
}
