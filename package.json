{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle",
    "dev": "run-p dev:*",
    "dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
    "dev:css": "cross-env NODE_ENV=development npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:server": "cross-env NODE_ENV=development node --inspect --require ./node_modules/dotenv/config --require ./build/server.js",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|gql|graphql|mdx|vue)\"",
    "setup": "npm install && npm run build && npm run validate",
    "prepare": "husky install",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint-fix": "eslint . --fix",
    "validate": "run-p lint typecheck",
    "typecheck": "tsc -b",
    "postinstall": "remix setup node && npx prisma generate",
    "migrate:deploy": "npx prisma migrate deploy",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "docker": "docker compose up -d"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.0",
    "@chakra-ui/react": "^2.8.0",
    "@emotion/react": "^11",
    "@emotion/server": "^11",
    "@emotion/styled": "^11",
    "@prisma/client": "^5.2.0",
    "@reach/dialog": "^0.18.0",
    "@remix-run/express": "^1.19.3",
    "@remix-run/node": "^1.19.3",
    "@remix-run/react": "^1.19.3",
    "@remix-run/server-runtime": "^1.19.3",
    "bcryptjs": "^2.4.3",
    "change-case": "^4.1.2",
    "clsx": "^2.0.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "framer-motion": "^10",
    "html-to-image": "^1.11.11",
    "isbot": "^3.6.13",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^15.1.0",
    "qrcode.react": "^3.1.0",
    "react": "^18.2.0",
    "react-calendar": "^4.6.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "react-select": "^5.7.4",
    "remix": "^1.19.3",
    "remix-auth": "^3.5.1",
    "remix-auth-github": "^1.6.0",
    "remix-auth-google": "^1.2.0",
    "remix-utils": "^6.6.0",
    "tiny-invariant": "^1.3.1",
    "validator": "^13.11.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.19.3",
    "@remix-run/eslint-config": "^1.19.3",
    "@tailwindcss/forms": "^0.5.6",
    "@types/compression": "^1.7.2",
    "@types/eslint": "^8.44.2",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.5.8",
    "@types/nprogress": "^0.2.0",
    "@types/qrcode.react": "^1.0.3",
    "@types/react": "^18.2.21",
    "@types/react-calendar": "^3.9.0",
    "@types/react-dom": "^18.2.7",
    "@types/validator": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-c8": "^0.23.4",
    "autoprefixer": "^10.4.15",
    "cookie": "^0.5.0",
    "cypress": "^13.1.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.2",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "msw": "^1.2.5",
    "nodemon": "^3.0.1",
    "npm": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.29",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "prisma": "^5.2.0",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16"
  },
  "lint-staged": {
    "*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|gql|graphql|mdx|vue)": [
      "prettier --write"
    ]
  },
  "sideEffects": false
}
